<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company_list_name"
        android:layout_margin="5dp"
        android:layout_width="280dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/company_symbol_name"
        tools:text="Apple" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company_symbol_name"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_list_name"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        tools:text="AAPL" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company_exchange_name"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/company_list_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NYSE" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/company_symbol_name"
        android:background="@color/colorTransparentWhite"/>





</androidx.constraintlayout.widget.ConstraintLayout>