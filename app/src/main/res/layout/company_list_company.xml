<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:id="@+id/company_list_name"
        android:layout_width="90dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Apple" />


    <TextView
        android:id="@+id/company_exchange_name"
        android:layout_width="90dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/company_list_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NYSE" />

    <TextView
        android:id="@+id/company_symbol_name"
        android:layout_width="90dp"
        android:layout_height="25dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_list_name"
        tools:text="AAPL" />


</androidx.constraintlayout.widget.ConstraintLayout>